{
  "name": "habity-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Habity - Your friendly habit tracking companion - Monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:shared": "turbo run build --filter=@habit-tracker/* --force",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "backend:dev": "npm run dev --workspace=apps/backend",
    "mobile:dev": "npm run start --workspace=apps/mobile",
    "postinstall": "patch-package && npm run build:shared"
  },
  "devDependencies": {
    "patch-package": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "metro-resolver": "^0.80.12",
    "react-native-url-polyfill": "^3.0.0",
    "turbo": "^1.11.0"
  },
  "overrides": {
    "expo-constants": "~15.4.6",
    "@expo/config-plugins": "~7.9.2"
  }
}
