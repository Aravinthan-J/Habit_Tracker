{
  "expo": {
    "name": "Habity",
    "slug": "habit-tracker",
    "version": "1.0.0",
    "description": "Build routines, track streaks, win badges. Your friendly habit tracking companion to build lasting routines and celebrate every win.",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.habity.app",
      "infoPlist": {
        "NSMotionUsageDescription": "We need access to your step count to track your daily activity and help you reach your fitness goals."
      }
    },
    "android": {
      "package": "com.habity.app",
      "icon": "./assets/icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#8B5CF6"
      },
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "POST_NOTIFICATIONS",
        "NOTIFICATIONS",
        "VIBRATE",
        "ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "c4034052-7ec1-4df5-8cda-cf6d05be91bb"
      }
    }
  }
}
